<com.ryansplayllc.ryansplay.models.SoftKeyboardHandledRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.ryansplayllc.ryansplay.JoinGame2"
    android:background="#ffffff"
    android:id="@+id/join_game_content_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/joingame2_header">
        <include
            android:id="@+id/header"
            layout="@layout/header" />

        <fonts.BebasNeueBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Games"
            android:id="@+id/private_game_lobby_headerText"
            android:textColor="#ffffffff"
            android:layout_marginTop="0dp"
            android:textStyle="bold"
            android:textSize="21dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/joingame2_searchicon"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="Search Game"
            android:layout_alignLeft="@+id/addplays_icon"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/addplays_icon"
            android:background="@drawable/add_play_icon"

            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:visibility="gone" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/joingame2_top_tab"
        android:layout_below="@+id/joingame2_header"
        android:background="#F6F7F2"
        android:padding="10dp" >
        <fonts.BebasNeueBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WED APR 21, 2015"
            android:textColor="#347296"
            android:textSize="17dp"
            android:textStyle="bold"
            android:id="@+id/imageView" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/joingame_refreshbutton"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_refresh"
            android:visibility="invisible" />

    </RelativeLayout>


    <fonts.BebasNeueBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select_game_info_label"
        android:text="Select your game"
        android:textSize="15dp"
        android:textColor="#004770"
        android:textStyle="bold"
        android:layout_below="@+id/joingame2_top_tab"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:visibility="gone"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:orientation="horizontal"
        android:layout_below="@+id/select_game_info_label"
        android:background="#000000"
        android:alpha="0.1"
        android:id="@+id/joingame2_headdivider"
        android:layout_marginTop="5dp">

    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/joingame2_playerslst_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/joingame2_headdivider"
        android:layout_above="@+id/joingame_footer_layout"
        android:headerDividersEnabled="true"
        android:dividerHeight="2dp"
        android:footerDividersEnabled="true"

       />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search For Game"
        android:id="@+id/joingame2_searchbutton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/signup_bar"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/joingame_footer_layout"
        android:layout_alignParentBottom="true">
        <include
            android:id="@+id/st_in_footer"
            layout="@layout/footer" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9e000000"
        android:id="@+id/search_game_layout"
        android:visibility="gone"
        >

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:background="#ffffff"
        android:layout_centerInParent="true"


        >


        <ImageView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/search_game_popup_close"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="-5dp"
            android:nestedScrollingEnabled="false"
            android:src="@drawable/close_blue"
            android:layout_marginLeft="0dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/SearchGameNameText"
            android:id="@+id/searchgame_labels_layout"
            android:layout_centerHorizontal="true"
            >
        <fonts.BebasNeueBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:text="Search games"
            android:id="@+id/searchgame_toplabel"
            android:textColor="#347296"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
             />
        <fonts.BebasNeueBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="ENTER GAME CREATOR USERNAME"
            android:id="@+id/searchgame_creator_label"
            android:textColor="#347296"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:background="#ffffff"
            android:layout_marginTop="25dp"/>


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_bar"
            android:id="@+id/find_game_button"
            android:layout_below="@+id/SearchGameNameText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">
            <fonts.BebasNeueBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Find your Game"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:textSize="17dp"

                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchgame_status_layout"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/SearchGameNameText"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/erow"

                android:id="@+id/errImg"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />
            <fonts.HelveticaNeueCondensedBoldTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/searchgame_status_text"
                android:text="Error"
                android:layout_toRightOf="@+id/errImg"
                android:layout_alignTop="@+id/errImg"
                android:textColor="#ffd64541"
                android:textStyle="bold"

                />


        </RelativeLayout>

        <fonts.HelveticalNeueCondensedBoldEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SearchGameNameText"
            android:background="@drawable/search_text_box"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:hint="Creator Name"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:maxLength="20"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"

            />


    </RelativeLayout>
    </RelativeLayout>

</com.ryansplayllc.ryansplay.models.SoftKeyboardHandledRelativeLayout>

