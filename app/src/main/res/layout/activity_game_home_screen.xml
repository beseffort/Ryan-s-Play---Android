<com.ryansplayllc.ryansplay.models.SoftKeyboardHandledRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_screen_content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baseballback"

    tools:context="com.ryansplayllc.ryansplay.GameHomeScreenActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"



        >


        <LinearLayout
            android:id="@+id/gh_ll_create_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/signup_bar"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/default_padding"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/layoutpoints">

            <fonts.BebasNeueBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/default_padding"
                android:text="@string/create_new_game"
                android:textColor="@android:color/white"
                android:textSize="@dimen/default_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/gh_ll_join_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gh_ll_create_game"
            android:layout_marginTop="5dp"
            android:background="@drawable/gray_button2"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/default_padding"
            android:layout_alignRight="@+id/gh_ll_create_game"
            android:layout_alignEnd="@+id/gh_ll_create_game"
            android:layout_alignLeft="@+id/gh_ll_create_game"
            android:layout_alignStart="@+id/gh_ll_create_game">

            <fonts.BebasNeueBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/default_padding"
                android:text="@string/join_game"
                android:textSize="@dimen/default_text_size"
                android:textColor="#347296" />
        </LinearLayout>

        <fonts.HelveticalNeueTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enterPromoCode"
            android:text="Enter RP Code"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/gh_ll_join_game"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/enterPromoCode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:id="@+id/newtorplayout"
          >
            <fonts.HelveticalNeueTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/newtorpbaseball"
                android:id="@+id/textView23"
                android:textColor="#ffffff"
                android:textSize="13dp"
                />

            <fonts.HelveticaNeueCondensedBoldTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/learn_how_to_play"
                android:textColor="#ffffff"
                android:layout_marginLeft="8dp"

                android:text="@string/learnhowtoplay"
                android:textSize="14dp"
                android:textStyle="bold"
                />

        </LinearLayout>



        <viewstyles.CircularImageView

            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/home_profile_image"
            android:src="@drawable/leaderbord_profile_icon"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/imageView9"
            android:layout_centerHorizontal="true"
            android:background="#00ffffff"


            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/my_tv_player_name"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:id="@+id/layoutpoints">

            <fonts.BebasNeueBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/home_plays_in_hand"
                android:textColor="#ffffffff"
                android:textSize="22dp"
                android:textStyle="bold"

                />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/imageView3"
                android:src="@drawable/playsmallicon"
                android:layout_alignTop="@+id/home_no_of_plays"
                android:layout_alignLeft="@+id/learn_how_to_play"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" />

        </LinearLayout>

        <fonts.BebasNeueBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/my_tv_player_name"

            android:textColor="#ffffffff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/home_profile_image"
            android:layout_marginTop="6dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView9"
            android:background="@drawable/baseballbackname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="87dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:id="@+id/home_footer_layout"
        android:visibility="visible"
        >

        <ImageView
            android:id="@+id/fo_ibt_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home"
            android:layout_marginLeft="15dp"

            />

        <ImageView
            android:id="@+id/fo_ibt_leader_board"
            android:layout_toRightOf="@+id/fo_ibt_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/leader_board"
            android:layout_marginLeft="24dp"


            />

        <ImageView
            android:id="@+id/fo_ibt_plays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:background="@drawable/plays"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/fo_ibt_account"
            android:layout_toLeftOf="@+id/fo_ibt_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profileselector"
            android:layout_marginRight="24dp"

            />

        <ImageView
            android:id="@+id/fo_ibt_settings"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/settings"
            android:layout_marginRight="15dp"

            />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:background="#ffffff"
        android:visibility="gone"
        android:id="@+id/home_promo_layout"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/close_blue"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/home_promo_popupclose_icon"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:id="@+id/promoCodeLayout"
            android:layout_centerInParent="true">

            <fonts.BebasNeueBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter RP Code"
                android:id="@+id/home_enter_promo_label"
                android:textColor="#004770"
                android:textSize="21dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/home_promo_text"
                android:background="#ffffff"

                />

            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/home_promo_text"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:visibility="gone"
                android:id="@+id/home_promo_status_layout"
                android:gravity="center"
                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/erow"
                    android:id="@+id/home_promo_error_icon"
                    android:layout_centerVertical="true"
                    />
                <fonts.HelveticaNeueCondensedBoldTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/promoCodeErrText"
                    android:text="This RP Code is no longer active"
                    android:textColor="#ffd64541"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/home_promo_error_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <fonts.HelveticalNeueCondensedBoldEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/search_text_box"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:id="@+id/home_promo_text"
                android:singleLine="true"
                android:maxLength="30"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/popup_orangebutton"
                android:layout_below="@+id/home_promo_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/home_promocode_submitbutton"
                android:layout_alignRight="@+id/home_promo_text"
                android:layout_alignLeft="@+id/home_promo_text"
                >

                <fonts.BebasNeueBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Redeem Code"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="#ffffff"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:background="#ffffff"
            android:visibility="gone"
            android:id="@+id/home_promo_final_layout">
            <fonts.BebasNeueBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Congrats!"
                android:textSize="42dp"
                android:textColor="#004770"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/home_promo_congrats_text"/>

            <fonts.HelveticaNeueCondensedBoldTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You've successfully added 50"
                android:textColor="#004770"
                android:textStyle="bold"
                android:id="@+id/home_promo_addsuccess_text"
                android:layout_below="@+id/home_promo_congrats_text"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                />

            <fonts.HelveticaNeueCondensedBoldTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="more plays to your account"
                android:layout_below="@+id/home_promo_addsuccess_text"
                android:textSize="18dp"
                android:textColor="#004770"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>

    </RelativeLayout>





</com.ryansplayllc.ryansplay.models.SoftKeyboardHandledRelativeLayout>