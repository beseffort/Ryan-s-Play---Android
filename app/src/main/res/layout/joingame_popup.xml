<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/joingame_popup"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:orientation="horizontal"
    android:background="#9e000000">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="370dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_gravity="center_vertical"
    android:background="#ffffff">


    <ImageView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/popup_close_button"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:nestedScrollingEnabled="false"
        android:onClick="popupClose"
        android:src="@drawable/close_blue" />

    <fonts.BebasNeueBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:text="JOIN GAME"
        android:id="@+id/umpire_points"
        android:textColor="#347296"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/popup_close_button"
        android:layout_marginTop="10dp" />
    <fonts.BebasNeueBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Ryan's TUESDAY  20 PLAY GAME"
        android:id="@+id/umpire_hit_region"
        android:textColor="#347296"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/umpire_points"
        android:layout_marginTop="20dp"/>
    <fonts.BebasNeueBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:id="@+id/joingame_popup_creator"
        android:text="Ryanwheeler749"
        android:textColor="#347296"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/umpire_hit_region"
        android:layout_marginTop="5dp"/>

    <fonts.BebasNeueBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:id="@+id/text4"
        android:text="Interested in being a reserve umpire if necessary?"
        android:lines="2"
        android:gravity="center"
        android:textColor="#347296"
        android:textStyle="bold"
        android:layout_below="@+id/joingame_popup_game_length_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#347296"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text4"
        android:layout_marginTop="30dp"
        android:id="@+id/text5"

        />


    <RadioGroup
        android:id="@+id/joinstatus_radio"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/text4"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <RadioButton
            android:id="@+id/joingame_popup_radio_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/radio_button"
            android:textColor="#666666"
            android:paddingRight="0dp"
            android:paddingLeft="0dp"
            android:enabled="true"
            android:text="Yes"
            android:textSize="13dp"
            android:drawablePadding="3dp"
            android:textStyle="bold"

            />
        <!--<fonts.HelveticaNeueCondensedBoldTextview-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Yes"-->
            <!--android:layout_gravity="center"-->
            <!--android:textSize="14dp"-->
            <!--android:textColor="#666666"-->
            <!--android:textStyle="bold"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginTop="-0.5dp"-->
            <!---->

            <!--/>-->

        <RadioButton
            android:id="@+id/joingame_popup_radio_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:button="@null"
            android:drawableLeft="@drawable/radio_button"
            android:checked="false"
            android:enabled="true"
            android:paddingBottom="0dp"
            android:text="No"
            android:textStyle="bold"
            android:textSize="13dp"
            android:textColor="#666666"
            android:drawablePadding="3dp"
            />
        <!--<fonts.HelveticaNeueCondensedBoldTextview-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="No"-->
            <!--android:layout_gravity="center"-->
            <!--android:textSize="14dp"-->
            <!--android:textColor="#666666"-->
            <!--android:textStyle="bold"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginTop="-0.5dp"-->

            <!--/>-->


    </RadioGroup>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/signup_bar"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/joinstatus_radio"
        android:layout_marginTop="20dp"
        android:onClick="join">
        <fonts.BebasNeueBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Join game"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:textSize="18dp" />
        </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/joingame_popup_game_length_layout"


        android:layout_below="@+id/joingame_popup_creator"
        android:layout_centerHorizontal="true">


        <fonts.BebasNeueBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:id="@+id/joingame_popup_game_length"
            android:text="20 "
            android:textColor="#347296"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="20dp"
            />
    </RelativeLayout>


</RelativeLayout>
</LinearLayout>
