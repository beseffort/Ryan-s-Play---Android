<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ryansplayllc.ryansplay.LoginActivity"
    android:focusable="true" android:focusableInTouchMode="true"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ff347296"
        android:padding="@dimen/default_padding" >

        <fonts.BebasNeueBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_padding"
            android:id="@+id/signupHeading"
            android:text="Sign Up"
            android:textColor="#ffffffff"
            android:textSize="21dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            />

        <fonts.HelveticaNeueCondensedBoldTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/signup_cancel_text_view"
            android:layout_alignBottom="@+id/signupHeading"

             />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp">


            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 >





                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/firstNameLayout"
                    android:layout_marginTop="10dp">
                    <fonts.BebasNeueBoldTextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/firstNameText"
                        android:text="@string/first_name"
                        android:layout_alignParentLeft="true"
                        android:textColor="#347296"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/sign_up_text_size" />

                    <fonts.HelveticalNeueCondensedBoldEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/smallline"
                        android:layout_toRightOf="@+id/firstNameText"
                        android:id="@+id/su_et_first_name"
                        android:textColor="#666666"
                        android:singleLine="true"

                        android:layout_marginLeft="10dp"
                        android:hint="First Name"
                        android:textSize="@dimen/sign_up_text_size"
                        android:padding="@dimen/default_padding"
                        android:lines="1"
                        android:maxLines="1"
                        android:maxLength="30" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lastNameLayout"
                    android:layout_below="@+id/firstNameLayout">
                    <fonts.BebasNeueBoldTextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/lastNameText"
                        android:text="@string/last_name"
                        android:layout_alignParentLeft="true"
                        android:textColor="#347296"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="25dp"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sign_up_text_size" />
                    <fonts.HelveticalNeueCondensedBoldEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/smallline"
                        android:layout_toRightOf="@+id/lastNameText"
                        android:id="@+id/su_et_last_name"
                        android:textColor="#666666"
                        android:layout_marginLeft="10dp"
                        android:hint="Last Name"
                        android:textSize="@dimen/sign_up_text_size"
                        android:padding="@dimen/default_padding"
                        android:lines="1"
                        android:maxLines="1"
                        android:maxLength="30"
                        android:singleLine="true"/>
                    </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/emailLayout"
                    android:layout_below="@+id/lastNameLayout">
                    <fonts.BebasNeueBoldTextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/emailText"
                        android:text="@string/email"
                        android:layout_alignParentLeft="true"
                        android:textColor="#347296"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sign_up_text_size" />
                    <fonts.HelveticalNeueCondensedBoldEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/smallline"
                        android:layout_toRightOf="@+id/emailText"
                        android:id="@+id/su_et_email"
                        android:textColor="#666666"
                        android:layout_marginLeft="10dp"
                        android:hint="Email"
                        android:textSize="@dimen/sign_up_text_size"
                        android:padding="@dimen/default_padding"
                        android:lines="1"
                        android:maxLines="1"
                        android:maxLength="40"
                        android:singleLine="true"
                        android:inputType="textWebEmailAddress"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/usernameLayout"
                    android:layout_below="@+id/emailLayout">
                    <fonts.BebasNeueBoldTextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/username"
                        android:text="@string/username"
                        android:layout_alignParentLeft="true"
                        android:textColor="#347296"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="25dp"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sign_up_text_size" />
                    <fonts.HelveticalNeueCondensedBoldEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/smallline"
                        android:layout_toRightOf="@+id/username"
                        android:id="@+id/signup_username"
                        android:textColor="#666666"
                        android:layout_marginLeft="10dp"
                        android:hint="Username"
                        android:textSize="@dimen/sign_up_text_size"
                        android:padding="@dimen/default_padding"
                        android:lines="1"
                        android:maxLines="1"
                        android:maxLength="30"
                        android:singleLine="true"
                        />


                    <fonts.HelveticaNeueCondensedBoldTextview
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Make this memorable"
                        android:textSize="10dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/signup_rpcode_label"
                        android:layout_alignTop="@+id/signup_username"
                        android:layout_marginTop="14dp"
                        android:textColor="#666666"
                        android:layout_marginRight="7dp"
                        android:gravity="center_horizontal"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/passwordLayout"
                    android:layout_below="@+id/usernameLayout">
                    <fonts.BebasNeueBoldTextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/passwordText"
                        android:text="@string/signup_password"
                        android:layout_alignParentLeft="true"
                        android:textColor="#347296"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="25dp"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sign_up_text_size" />
                    <fonts.HelveticalNeueCondensedBoldEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/smallline"
                        android:layout_toRightOf="@+id/passwordText"
                        android:id="@+id/su_et_password"
                        android:textColor="#666666"
                        android:layout_marginLeft="10dp"
                        android:hint="Password"
                        android:textSize="@dimen/sign_up_text_size"
                        android:padding="@dimen/default_padding"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:maxLines="1"
                        android:maxLength="30"
                        android:singleLine="true"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/confirmpaswordlayout"
                    android:layout_below="@+id/passwordLayout">
                    <fonts.BebasNeueBoldTextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/confirm_password_text"
                        android:text="@string/confirm_password"
                        android:layout_alignParentLeft="true"
                        android:textColor="#347296"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="25dp"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sign_up_text_size" />
                    <fonts.HelveticalNeueCondensedBoldEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/smallline"
                        android:layout_toRightOf="@+id/confirm_password_text"
                        android:id="@+id/su_et_cnfm_password"

                        android:textColor="#666666"
                        android:layout_marginLeft="10dp"
                        android:hint="Confirm Password"
                        android:textSize="@dimen/sign_up_text_size"
                        android:padding="@dimen/default_padding"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:maxLines="1"
                        android:maxLength="30"
                        android:singleLine="true"/>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/promocodelayout"
                    android:layout_below="@+id/confirmpaswordlayout">
                    <fonts.BebasNeueBoldTextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/promo_code_text"
                        android:text="@string/promocode"
                        android:layout_alignParentLeft="true"
                        android:textColor="#347296"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="25dp"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sign_up_text_size" />
                    <fonts.HelveticalNeueCondensedBoldEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/smallline"
                        android:layout_toRightOf="@+id/promo_code_text"
                        android:id="@+id/signup_promo_code"
                        android:textColor="#666666"
                        android:layout_marginLeft="10dp"
                        android:hint="Username of who invited you"
                        android:textSize="@dimen/sign_up_text_size"
                        android:padding="@dimen/default_padding"
                        android:lines="1"
                        android:maxLines="1"
                        android:maxLength="20"
                        android:singleLine="true"/>

                </RelativeLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:textColor="@drawable/textcolor"
                    android:layout_below="@+id/promocodelayout"
                    android:layout_centerHorizontal="true"
                    android:text="@string/create_account"

                    android:layout_marginTop="30dp"
                    android:id="@+id/lg_bt_login"
                    android:onClick="signUp" />

            </RelativeLayout>



    </ScrollView>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/authButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/default_margin"
        android:layout_marginTop="40dp"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>