<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_up_umpire_result_Screen_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:alpha="0.8"
    android:background="#9e000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:gravity="right">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            >
            <fonts.BebasNeueBoldTextView
                android:id="@+id/pop_up_umpire_result_no_of_plays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="Play #19"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:layout_centerHorizontal="true"
              />

        <fonts.BebasNeueBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pop_up_umpire_result_hitregion"
            android:layout_below="@+id/pop_up_umpire_result_no_of_plays"
            android:textSize="27dp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

            <fonts.BebasNeueBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Points Earned"
            android:id="@+id/textView20"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:layout_below="@+id/pop_up_umpire_result_hitregion"
            android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="19dp" />

        <fonts.BebasNeueBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/pop_up_umpire_result_total_points"
            android:layout_below="@+id/textView20"
            android:layout_centerHorizontal="true"
            android:text="17+"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:textIsSelectable="false"
            android:textSize="28dp"
            android:layout_marginTop="0dp" />

        <fonts.BebasNeueBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sponsored by"
            android:id="@+id/textView26"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:textSize="15dp"
            android:layout_below="@+id/pop_up_umpire_result_total_points"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView13"
            android:layout_centerHorizontal="true"
            android:src="@drawable/adphoto"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/textView26" />
            </RelativeLayout>


    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>