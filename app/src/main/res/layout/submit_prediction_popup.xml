<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/submit_prediction_popup"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:orientation="horizontal"
    android:alpha="0.8"
    android:background="#9e000000"
    android:gravity="right">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:onClick="umpirePreditionpopupClose"
        android:background="#ffffff">


        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/umpire_confirm_popup_close_button"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:nestedScrollingEnabled="false"
            android:src="@drawable/close_blue" />
        <fonts.BebasNeueBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:text="Play #19"
            android:id="@+id/umpire_points"
            android:textColor="#347296"
            android:textStyle="bold"
            android:layout_below="@+id/umpire_confirm_popup_close_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />
        <fonts.BebasNeueBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="HIT TO RIGHT FIELD"
            android:id="@+id/umpire_hit_region"
            android:textColor="#347296"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/umpire_points"
            android:layout_marginTop="10dp"/>


        <fonts.BebasNeueBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:id="@+id/text4"
            android:text="Please Confirm Plays Selection"
            android:textColor="#666666"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/joingame_popup_game_length_layout"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="#347296"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text4"
            android:layout_marginTop="30dp"
            android:id="@+id/text5"

            />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/text4"
            android:id="@+id/confirmPlayButton"
            android:onClick="confirmPlay">
            <fonts.BebasNeueBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Confirm play"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:textSize="18dp"
                 />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/joingame_popup_game_length_layout"


            android:layout_centerHorizontal="true"
            android:layout_below="@+id/umpire_hit_region">


        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>
