<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/search_game_popup"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:orientation="horizontal"
    android:alpha="0.8"
    android:background="#9e000000">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#ffffff"
        android:layout_centerInParent="true"
        >


        <ImageView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/umpire_confirm_popup_close_button"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="-5dp"
            android:nestedScrollingEnabled="false"
            android:src="@drawable/close_blue"
            android:onClick="searchGamePopupCLose"
            android:layout_marginLeft="0dp" />
        <fonts.BebasNeueBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:text="Search games"
            android:id="@+id/umpire_points"
            android:textColor="#347296"
            android:textStyle="bold"
            android:layout_below="@+id/umpire_confirm_popup_close_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />
        <fonts.BebasNeueBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="ENTER GAME CREATOR USERNAME"
            android:id="@+id/umpire_hit_region"
            android:textColor="#347296"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/umpire_points"
            android:layout_marginTop="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="#347296"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/text5"

            android:layout_below="@+id/joingame_popup_game_length_layout" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_bar"
            android:id="@+id/confirmPlayButton"
            android:onClick="searchGame"
            android:layout_below="@+id/SearchGameNameText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">
            <fonts.BebasNeueBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Find your Game"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:textSize="17dp"

                 />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/joingame_popup_game_length_layout"


            android:layout_centerHorizontal="true"
            android:layout_below="@+id/umpire_hit_region">


        </RelativeLayout>

        <fonts.HelveticalNeueCondensedBoldEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SearchGameNameText"
            android:background="@drawable/search_text_box"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/joingame_popup_game_length_layout"
            android:hint="Creator Name"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:maxLength="20"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true" />


    </RelativeLayout>
</RelativeLayout>
